constexpr uint32_t maskI = 4095 << 20;
constexpr uint32_t signExt11 = 65535 << 12;

int32_t getImmI (int32_t instCode) {
  return signExt11 + ((((instCode & maskI) >> 20) + (1 << 12)) & static_cast<int32_t>(4095U));
}

constexpr uint32_t maskS1 = 31 << 7;
constexpr uint32_t maskS2 = 127 << 25;

int32_t getImmS (int32_t instCode) {
  return signExt11 + (((((instCode & maskS1) >> 7) + ((instCode & maskS2) >> 20)) + (1 << 12)) & static_cast<int32_t>(4095U));
}

constexpr uint32_t maskB1 = 1 << 7;
constexpr uint32_t maskB2 = 15 << 8;
constexpr uint32_t maskB3 = 63 << 25;
constexpr uint32_t maskB4 = 1 << 31;

constexpr uint32_t signExt12 = 1048575 << 12;

int32_t getImmB (int32_t instCode) {
  return signExt12 + (((((instCode & maskB1) << 4) + ((instCode & maskB2) >> 7) + 
  ((instCode & maskB3) >> 20) + ((instCode & maskB4) >> 19)) + (1 << 12)) & static_cast<int32_t>(1048575U));
}

constexpr uint32_t maskU = 1048575 << 12;

int32_t getImmU (int32_t instCode) {
  return instCode & maskU;
}

constexpr uint32_t maskJ1 = 255 << 12;
constexpr uint32_t maskJ2 = 1 << 20;
constexpr uint32_t maskJ3 = 1023 << 21;
constexpr uint32_t maskJ4 = 1 << 31;
constexpr uint32_t signExt20 = 2047 << 21;

int32_t getImmJ (int32_t instCode) {
  return signExt20 + (((instCode & maskJ1) + ((instCode & maskJ2) >> 9) + 
  ((instCode & maskJ3) >> 20) + ((instCode & maskJ4) >> 11)) + (1 << 20)) & static_cast<int32_t>(2097151U);
}

